<view class="page">
    <view class="page__bd">

    	<view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>
        <view wx:if="{{searchList.length > 0}}">
            <view class="weui-cells__title">搜索结果</view>
	        <view class="weui-cells weui-cells_after-title">
	            <navigator wx:for="{{searchList}}" wx:key="{{item._id}}" url="/pages/detail/detail?fileHash={{item.fileHash}}&albumID={{item.albumID}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
	                <view class="weui-cell__bd">{{item.name}} - {{item.author}}</view>
	                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
	            </navigator>
	        </view>           
        </view>

        <view class="weui-cells__title">播放列表</view>
        <view class="weui-cells weui-cells_after-title">
        	<i-swipeout wx:for="{{musicList}}" wx:key="{{item._id}}"  operateWidth="{{70}}">
		        <view slot="content">
		            <navigator url="/pages/detail/detail?mid={{item._id}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
		                <view class="weui-cell__bd">{{item.name}} - {{item.author}}</view>
		                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
		            </navigator>
		        </view>
		        <view slot="button" class="i-swipeout-demo-button-group">
		            <view bindtap="onDeleteCurrent" data-mid="{{item._id}}" class="i-swipeout-demo-button">删除</view>
		        </view>
		    </i-swipeout>            
        </view>

    </view>
</view>